@using VTMUNC.ViewModels;
@{
    ViewData["Title"] = "About Page";
}

<style>
    /* About Team Section */
    section.aboutTeam {
        height: calc(100vh - 61px);
        padding-top: 80px;
        padding-bottom: 80px;
    }

    .teamTitle {
        text-align: center;
        margin-top: 110px;
        margin-bottom: 40px;
        padding-right: 160px;
    }
    
    .teamDescription {
        text-align: justify;
        text-justify: inter-word;
        padding: 40px;
        background-color: #F2F1E8;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        z-index: 0;
    }

    .teamDescriptionClm {
        z-index: 2;
    }

    .teamImageHighlight {
        background: #3A506B;
        box-shadow: -160px 0px 0px #3A506B,
                    0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        padding-bottom: 40px;
        width: 100%;
        height: 90%;
    }

    .teamImgClm 
    {
        z-index: 1;
    }

    .columnMaroon {
        position: absolute;
        left: 72.36%;
        right: 23.5%;
        top: 61px;
        background: #630031;
        height: calc(100vh - 61px);
        z-index: 1;
    }

    .teamBackground {
        position: absolute;
        width: 100%;
        left: 0;
        top: 61px;
        background: url("/Images/About1.jpg");
        height: calc(100vh - 61px);
        background-repeat: no-repeat;
        background-size: cover;
        z-index: 0;
    }

    .secretariatTitle {
        position: relative;
        display: inline-block;
        padding-bottom: 10px; 
    }

    .secretariatTitle::after {
        background-color: #DEBB8F;
        content: '';
        position: absolute;
        left: 0;
        bottom: 8px;
        height: 20px; 
        width: 100%;
        transform: scaleX(1.1);
        z-index: -1;
    }

    .secretariatInfo {        
        background: #F2F1E8;
        padding: 40px;
        margin-bottom: 40px;
        margin-right: 10px;
        margin-left: 10px;
    }

    .secretariatCard {
        background: #F2F1E8;
        padding: 40px;
        margin-bottom: 40px;
        margin-right: 10px;
        margin-left: 10px;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
    }

    .secretariatEmail {
        font-style: italic;
        font-family: "Playfair Display", sans-serif;
        font-size: 16px;
    }

    .secretariatImg {
        height: 300px;
        width: 100%;
        object-fit: cover;
        background-position: center;
        margin-bottom: 20px;
    }

    .secretariatCard > p {
        text-align: justify;
        text-justify: inter-word;
        font-size: 13px;
    }

</style>

